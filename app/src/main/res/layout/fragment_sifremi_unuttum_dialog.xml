<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SifremiUnuttumDialogFragment">


    <TextView
        android:id="@+id/tvSifreyiGonderDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Şifreyi Tekrar Gönder"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSifreyiTekrarGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSifreyiGonderDialog" />

    <Button
        android:id="@+id/btnIptalSifreyiUnuttumDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="iptal"
        app:layout_constraintStart_toStartOf="@+id/etSifreyiTekrarGonder"
        app:layout_constraintTop_toBottomOf="@+id/etSifreyiTekrarGonder" />

    <Button
        android:id="@+id/btnGonderSifreyiUnuttumDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="gönder"
        app:layout_constraintEnd_toEndOf="@+id/etSifreyiTekrarGonder"
        app:layout_constraintTop_toBottomOf="@+id/etSifreyiTekrarGonder" />
</androidx.constraintlayout.widget.ConstraintLayout>